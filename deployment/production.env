# Production Environment Configuration Template
# Copy this to .env and fill in your actual values

# Database Configuration
DATABASE_URL=sqlite:///data/media_monitoring.db

# Google Gemini API Configuration (Required for AI summarization)
CLAUDE_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-flash
GEMINI_MAX_TOKENS=8000

# Email Configuration (Required for report distribution)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
SMTP_USE_TLS=True
EMAIL_FROM=your_email@gmail.com
EMAIL_RECIPIENTS=recipient1@company.com,recipient2@company.com

# Web Scraping Configuration
SCRAPING_TIMEOUT=30
SCRAPING_USER_AGENT=Media Monitoring Agent/1.0
SCRAPING_MAX_RETRIES=3

# Application Configuration
DEBUG=False
LOG_LEVEL=INFO
LOG_FILE=logs/media_monitoring.log
ENABLE_JSON_LOGGING=True
HOST=0.0.0.0
PORT=8000
CORS_ORIGINS=https://yourdomain.com

# Rate Limiting Configuration
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Production mode (disable local/mock mode)
LOCAL_MODE=false

# Security Configuration
SECRET_KEY=your_secret_key_here_generate_a_strong_one